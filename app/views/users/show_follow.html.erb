<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      <%= image_tag "/user_images/#{@user.image_name}", alt: "user icon", id:"user-icon" %>
      <%= @user.name %>
      </h1>
      <span><%= link_to "view my profile", @user, class: "my-view" %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h2><%= @title %></h2>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render 'users' %>
      </ul>
      <%= will_paginate @users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt'  %>
    <% end %>
  </div>
</div>