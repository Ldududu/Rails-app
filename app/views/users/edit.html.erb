<h1>ユーザー情報を変更する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, name: "name", class: 'form-control' %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, name: "email", class: 'form-control' %>

      <%= f.label :image_name, "プロフィール画像" %>
      <%= f.file_field :image_name, name: "image_name", class: 'form-control' %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, name: "password", class: 'form-control' %>

      <%= f.label :password_cofirmation, "パスワード確認" %>
      <%= f.password_field :password_cofirmation, name: "password_confirmation", class: 'form-control' %>

      <%= f.submit "変更する", class: "btn" %>
    <% end %>
  </div>
</div>