
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <h1>
        <%= image_tag "/user_images/#{@user.image_name}", alt: "user icon", id:"user-icon" %>
        <%= @user.name %> 
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>